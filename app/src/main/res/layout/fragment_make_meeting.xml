<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/tv_content"
        style="@style/SaveMeetingDetail"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_margin="6dp"
        android:gravity="top"
        android:hint="@string/content_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_place_label"
        style="@style/SaveMeetingLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:text="@string/place_label"
        app:layout_constraintEnd_toStartOf="@id/tv_place"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_content" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_place"
        style="@style/SaveMeetingPlace"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_place_label"
        app:layout_constraintTop_toBottomOf="@id/tv_content" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_date_label"
        style="@style/SaveMeetingLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:text="@string/date_label"
        app:layout_constraintEnd_toStartOf="@id/tv_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_place_label" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_date"
        style="@style/SaveMeetingDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_date_label"
        app:layout_constraintTop_toBottomOf="@id/tv_place" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_time_label"
        style="@style/SaveMeetingLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:text="@string/time_label"
        app:layout_constraintEnd_toStartOf="@id/tv_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_date_label" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_time"
        style="@style/SaveMeetingTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_time_label"
        app:layout_constraintTop_toBottomOf="@id/tv_date" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_save"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/brown"
        android:layout_marginTop="20dp"
        android:text="@string/make_meeting"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_time_label" />


</androidx.constraintlayout.widget.ConstraintLayout>