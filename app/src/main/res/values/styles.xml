<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyTimePickerStyle" parent="android:Widget.Material.Light.TimePicker">
        <item name="android:timePickerMode">spinner</item>
    </style>

    <style name="TextCornerRadius" parent="android:Widget.Material.TextView">
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="SaveMeetingLabel" parent="TextCornerRadius">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="SaveMeetingContent" parent="TextCornerRadius">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="SaveMeetingPlace" parent="SaveMeetingContent">
        <item name="android:textSize">24sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SaveMeetingDate" parent="SaveMeetingContent"></style>

    <style name="SaveMeetingTime" parent="SaveMeetingContent"></style>

    <style name="SaveMeetingDetail" parent="TextCornerRadius">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Settings" parent="TextCornerRadius">
        <item name="android:textSize">28sp</item>
        <item name="android:gravity">center</item>
    </style>
    
</resources>